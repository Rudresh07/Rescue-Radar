<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightGreen"
    android:layout_height="match_parent"
    tools:context=".Register_new_Agency">
    <androidx.cardview.widget.CardView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/locimage"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/lightGreen"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radar"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/orange"
                    android:textSize="32sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/logout"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/edittv1"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/user"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:hint="Name"
            android:drawablePadding="10dp"
            android:elevation="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/edittv2"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/phone"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:hint="9876543221"
            android:drawablePadding="10dp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/edittv3"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/email"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:hint="user@gmail.com"
            android:drawablePadding="10dp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/edittv4"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/pin"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:hint="9876543221"
            android:drawablePadding="10dp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue Workers:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/edittv5"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:hint="Enter total rescue workers here"
            android:drawablePadding="10dp"
            android:elevation="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/edittv1"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                android:outlineAmbientShadowColor="@color/darkgreen"
                android:outlineSpotShadowColor="@color/button"
                android:backgroundTint="@color/button">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="SUBMIT"
                android:id="@+id/getOtp"
                android:gravity="center"
                android:backgroundTint="@color/button"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>